# Path to service account JSON file, or the JSON string itself
FIREBASE_SERVICE_ACCOUNT=./service-account.json

# Firebase RTDB URL
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Optional: base path prefix for all RTDB operations (default: /)
RTDB_BASE_PATH=/

# Optional: local directory for YAML dump files (default: .rtdb-data/)
RTDB_LOCAL_DIR=.rtdb-data/
